    <style>
        main {
            max-width: var(--layout-max-width);
            margin: 0 auto;
        }

        .swiper-slide {
            height: auto;
        }

        .section-width {
            padding: 0 1rem;
        }

        .highlights__card-wrapper {
            display: grid;
            grid-template-rows: repeat(3, fit-content(350px));
            row-gap: 2.5rem;
            padding: 2rem 0;
        }

        .project__content {
            display: flex;
            flex-direction: row;
        }

        .project__small-images {
            display: flex;
            flex-flow: column;
            justify-content: center;
            align-items: center;
            row-gap: 1rem;
            margin-top: 2rem;
        }
        .project__large-image {
            display: none;
        }

        .recommendations {
            padding-top: 3rem;
            padding-bottom: 8rem;
            position: relative;
        }

        .button-up {
            position: absolute;
            background-color: var(--color-dark-blue);
            border-style: none;
            padding: 2rem 0.5rem;
            left: 47%;
            bottom: -3rem;
        }

        .button-up svg {
            color: #fff;
        }

        @media (min-width: 768px) {
            .project__large-image {
                display: block;
                flex: 1 0 40%;
                margin: auto 0;
            }
            .project__small-images {
                flex-direction: row;
                justify-content: space-around;
                width: 80%;
                margin: 0 auto;
                margin-top: 4rem;
            }

            .highlights__card-wrapper {
                grid-template-columns: repeat(3, fit-content(250px));
                column-gap: 2.5rem;
                justify-content: center;
                padding: 2rem 0;
            }
        }
        @media (min-width: 640px) {
            .highlights__card-wrapper {
                grid-template-columns: repeat(3, fit-content(250px));
                column-gap: 2.5rem;
                justify-content: center;
                padding: 2rem 0;
            }
        }
    </style>

    <script>
        import Swiper, { Navigation } from 'swiper'

        // https://swiperjs.com/get-started
        const swiper = new Swiper('.swiper', {
            speed: 400,
            centeredSlides: true,
            modules: [Navigation],
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                // when window width is >= 320px
                320: {
                    slidesPerView: 2,
                    spaceBetween: 20,
                },
                // when window width is >= 640px
                640: {
                    centeredSlides: false,
                    slidesPerView: 3,
                    spaceBetween: 20,
                },
                800: {
                    centeredSlides: false,
                    slidesPerView: 4,
                    spaceBetween: 20,
                },
                1080: {
                    centeredSlides: false,
                    slidesPerView: 5,
                    spaceBetween: 20,
                },
            },
        })

        function goToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' })
        }
    </script>
</Layout>
