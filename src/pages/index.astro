---

<Layout title="Welcome to Astro.">
    <main class="px-0 main">
        <Carousel />

        <section class="pt-5 bg-white">
            <h2 class="mb-4" style="padding: 0 1rem">Our Services</h2>
            <CardSlider>
                {
                    CardConfig.map(({ title, cardColor, img, alt }) => {
                        return (
